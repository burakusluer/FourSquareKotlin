<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddLocation">

    <ImageView
        android:id="@+id/imageViewAddLocation"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="39dp"
        android:contentDescription="pickGalleryImage"
        app:layout_constraintBottom_toTopOf="@+id/editTextAddLocationName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/buttonAddLocation"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginBottom="278dp"
        android:onClick="addLocation"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editTextAddLocationName"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddLocationName" />

    <EditText
        android:id="@+id/editTextAddLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="LocationName"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAddLocation" />

</androidx.constraintlayout.widget.ConstraintLayout>